<h1>Schools available for tours:</h1>
<br />
<h3>Select school to view details and available guides.</h3>
<br />
<div>
  <table>
    <tr>
      <th>School Logo</th>
      <th>Name</th>
      <th>Location</th>
    </tr>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.logo %></td>
        <td><%= link_to school.name, school_path(school) %></td>
        <td><%= school.city %>, <%= school.state %></td>
      </tr>
    <% end %>
  </table>
</div>
