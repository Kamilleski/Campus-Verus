<h1>Schools available for tours:</h1>
<br />
<h3>Select school to view details and available guides.</h3>
<br />
<div>
  <table style="width:90%">
    <tr>
      <th>School Logo</th>
      <th>Name</th>
      <th>Location</th>
    </tr>
    <% @schools.each do |school| %>
      <tr>
        <td class="centered" style="max-width:150"><a href="/schools/<%= school.id %>">
          <img src="<%= school.logo %>" style="max-height:112px">
        </a></td>
        <td><%= link_to school.name, school_path(school) %></td>
        <td><%= school.city %>, <%= school.state %></td>
      </tr>
    <% end %>
  </table>
  <br />
  <div class="pagination">
    <%= paginate @schools %>
  </div>
</div>
